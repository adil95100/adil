#!groovy
pipeline {
    agent none
    
    parameters{
	     string(name: 'PERSON', defaultValue: 'Mr MAMOUNE', description: 'Mes Premiers pas sur la programation DevOps')	
    }
    
    stages {
	    script{
		    def a = 5
     
        stage('Build') {
            steps {
	       
	         echo "Building By-ttt>  ${params.PERSON}"
		 echo " a= ${a} "
            }
	           }
        }
        stage('Test') {
            steps {
                echo "Testing Bytt ${params.PERSON}" 
                }
        }
        stage('Deploy') {
            steps {
                echo "Deploying By ${params.PERSON}"
            }
        }
    }
}
